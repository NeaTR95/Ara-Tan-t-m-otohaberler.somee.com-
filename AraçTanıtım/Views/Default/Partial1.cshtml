@using AracTanitim.Models.Sınıflara;
@model List<Haber>
<div class="con-bot">
    @foreach (var x in Model)
    {
        <div class="left">
            <div class="bot-left">
                <img src="@x.HaberImage" style="width:300px; height:200px;" alt="" />
            </div>
            <div class="left-text">
                <h4>@x.Baslik</h4>
                
                <p>@x.Aciklama.Substring(0,100)...</p>
                <p><a href="/Haber/HaberDetay/@x.ID"><span class="read">Devamını Oku >></span></a></p>
            </div>
        </div>
    }
    @Html.Action("Partial2", "Default")
    
    <div class="clear"></div>
</div>