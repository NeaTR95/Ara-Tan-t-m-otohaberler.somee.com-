@model AracTanitim.Models.Sınıflara.Haber

@{
    ViewBag.Title = "YeniHaber";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Haber Ekleme</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Baslik)
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.HaberImage)
    @Html.TextBoxFor(x => x.HaberImage, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Haberi Ekle</button>
</form>
