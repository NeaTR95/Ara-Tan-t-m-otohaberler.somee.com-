@using AracTanitim.Models.Sınıflara;
@model List<Haber>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Haber Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Baslik</td>
            <td><a href="/Admin/HaberSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/HaberGetir/@x.ID" class="btn btn-warning">Güncelle</a></td>
            
        </tr>
    }
</table>
<a href="/Admin/YeniHaber/" class="btn btn-primary">Yeni Haber</a>

