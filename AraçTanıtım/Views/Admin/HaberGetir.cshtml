@model AracTanitim.Models.Sınıflara.Haber
@{
    ViewBag.Title = "HaberGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Haber Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("HaberGuncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly="readonly" })
    <br />
    @Html.LabelFor(x => x.Baslik)
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.HaberImage)
    @Html.TextBoxFor(x => x.HaberImage, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama,15,1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Haberi Güncelle</button>
}

